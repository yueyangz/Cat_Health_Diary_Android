<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient8"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:label="Cat Health App"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".Main.MainActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="117dp"
            android:layout_height="113dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/mao"
            android:onClick="onIconClick"/>

        <TextView
            android:layout_width="289dp"
            android:layout_height="60dp"
            android:id="@+id/caption"
            android:text="Cat Health Diary"
            android:textSize="34dp"
            android:textColor="#000"
            android:layout_above="@+id/Today"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/Today"
                android:text="Today"
                android:textSize="28dp"
                android:textColor="#FFF"
                android:background="@drawable/buttonshapebig"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:onClick="onTodayButtonClick"
                android:layout_above="@+id/Calendar"
                android:layout_alignLeft="@+id/Calendar"
                android:layout_alignStart="@+id/Calendar"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <Button
                android:id="@+id/Behavior"
                android:text="Behavior"
                android:textSize="28dp"
                android:textColor="#FFF"
                android:background="@drawable/buttonshapebig"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:onClick="onBehaviorButtonClick"
                android:layout_alignTop="@+id/Today"
                android:layout_alignLeft="@+id/VetInfo"
                android:layout_alignStart="@+id/VetInfo"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/Calendar"
                android:text="Calendar"
                android:textSize="28dp"
                android:textColor="#FFF"
                android:background="@drawable/buttonshapebig"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:onClick="onCalendarButtonClick"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <Button
                android:id="@+id/VetInfo"
                android:text="Vet Info"
                android:textSize="28dp"
                android:textColor="#FFF"
                android:background="@drawable/buttonshapebig"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:onClick="onVetInfoButtonClick"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <Button
                android:id="@+id/Notes"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Notes"
                android:textSize="20dp"
                android:textColor="#FFF"
                android:background="@drawable/buttonshape"
                android:onClick="onNotesAndRemindersButtonClick"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
            <Button
                android:id="@+id/weight_graph"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Weight"
                android:textSize="20dp"
                android:textColor="#FFF"
                android:background="@drawable/buttonshape"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="onWeightButtonClick"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp" />
            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/album_button"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:text="View Album"
                android:textSize="20dp"
                android:textColor="#FFF"
                android:background="@drawable/buttonshape"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="onAlbumButtonClick"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                />
            <Button
                android:id="@+id/setting"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Setting"
                android:textSize="20dp"
                android:textColor="#FFF"
                android:background="@drawable/buttonshape"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="onSettingButtonClick"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                 />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>